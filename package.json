    "@types/node": "^24.10.4",
    "pnpm": "^10.27.0",
    "prettier": "^3.7.4",
    "rollup": "^4.55.1",
    "rollup-plugin-delete": "^3.0.2",
    "rollup-plugin-prettier": "^4.1.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
